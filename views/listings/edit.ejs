<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="container mt-4">
        <h2>Edit Listing</h2>
        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
            <!-- Method override for PUT -->
            <input type="hidden" name="_method" value="PUT">

            <!-- Title input -->
            <div class="form-group">
                <label for="title">Title</label>
                <input id="title" name="listing[title]" value="<%= listing.title %>" placeholder="Title" class="form-control" required>
            </div>

            <!-- Description input -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="listing[description]" placeholder="Description" class="form-control" required><%= listing.description %></textarea>
            </div>

            <!-- Image URL input -->
            <div class="form-group">
                <label for="image">Image URL</label>
                <input id="image" type="url" name="listing[image]" value="<%= listing.image %>" placeholder="Image URL" class="form-control">
            </div>

            <!-- Price input -->
            <div class="form-group">
                <label for="price">Price</label>
                <input id="price" type="number" name="listing[price]" value="<%= listing.price %>" placeholder="Price" min="0" class="form-control" required>
            </div>

            <!-- Location input -->
            <div class="form-group">
                <label for="location">Location</label>
                <input id="location" type="text" name="listing[location]" value="<%= listing.location %>" placeholder="Location" class="form-control">
            </div>

            <!-- Country input -->
            <div class="form-group">
                <label for="country">Country</label>
                <input id="country" type="text" name="listing[country]" value="<%= listing.country %>" placeholder="Country" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Edit Listing</button>
        </form>
    </div>
</body>
