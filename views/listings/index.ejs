<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h1>All Listings</h1>

    <!-- Flex container to hold 4 columns -->
    <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: space-between;">
        <% for (let listing of allListing) { %>
            <div class="card" style="width: 30%; display: flex; flex-direction: column; margin-bottom: 20px;">
                
                    <!-- Image display -->
                    <img class="card-img-top" src="<%= listing.image.url %>" alt="listing image" style="width: 100%; height: auto;">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text"><%= listing.description %></p>
                    </div>
                    <a href="/listing/<%= listing._id %>" class="btn btn-primary">Go somewhere</a>
            
            </div>
        <% } %>
    </div>
</body>
